extends layout/main
include mixins/index

block content
  section.section.grid
    +brochuresComponent(brochures, date_added)

  section.section
    header.header.header--shorter-bottom
      h4.copy.copy--faint get the brochure sent to your email weekly
    form.form(
      method='POST'
      action='/newsletter/sub'
      enctype='application/x-www-form-urlencoded')

      input.form__email(
        required
        name='email'
        type='email'
        placeholder='📬 enter your email here 👍')

      button.form__submit.copy--uppercase.copy--faint subscribe
