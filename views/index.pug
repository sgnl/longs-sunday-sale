extends layout/main

mixin article(data)
  a(href=`${data.url}` target='_blank').link
    h2.copy.copy--uppercase.copy--underlined.copy--bottom-border= data.island

block content
  section.section.grid
    h2.grid.grid--centered= date_added
    each brochure in brochures
      article.article
        +article(brochure)

  section.section
    h4.copy.copy--faint get the brochure sent to your email weekly
    form.form(
      method='POST'
      action='/newsletter/sub'
      enctype='application/x-www-form-urlencoded'
      autocomplete)

      input.form__email(
        required
        name='email'
        type='email'
        placeholder='üì¨ enter your email here üëç')

      button.form__submit.copy--uppercase.copy--faint subscribe

  section.section
      a.link.emoji--link.copy.copy--faint.copy--bottom-border-faint(href='/previous-longs-cvs-sale-brochures') previous brochures