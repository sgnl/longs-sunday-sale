{
  "name": "longs_sunday_sale",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "css:build": "postcss styles/main.css -u postcss-nested -u postcss-extend -u autoprefixer -u cssnano -o public/css/styles.css",
    "start": "node index.js",
    "dev": "env $(cat .env) nodemon index.js & npm run css:build -- -w",
    "test": "xo && env $(cat test/helpers/test.env) ava",
    "deploy:now": "env $(cat .env) now -e MONGO_USER=@mongo-user -e MONGO_PASSWORD=@mongo-password -e MONGO_URL=@mongo-url -e SENDGRID_API_KEY=@sendgrid-api-key -e ENVIRONMENT=PRODUCTION"
  },
  "keywords": [],
  "author": "Ray Farias <rayrfarias@gmail.com> (http://github.com/sgnl)",
  "license": "GPL-3",
  "dependencies": {
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "express-winston": "^2.1.2",
    "got": "^6.6.3",
    "moment": "^2.17.0",
    "mongoose": "^4.7.0",
    "pug": "^2.0.0-beta6",
    "sendgrid": "^4.7.1",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.6",
    "ava": "^0.17.0",
    "cssnano": "^3.10.0",
    "postcss-cli": "^3.0.0-beta",
    "postcss-extend": "^1.0.5",
    "postcss-nested": "^1.0.0",
    "supertest": "^3.0.0",
    "xo": "^0.17.1"
  },
  "repository": "git@github.com:sgnl/longs_sunday_sale.git",
  "xo": {
    "space": true,
    "rules": {
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "new-cap": "off",
      "no-prototype-builtins": "off"
    }
  }
}
